	<Frame name="TRP3_RegisterRPStyleMain_Edit_Line" virtual="true">
		<Size x="0" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentFieldName" inherits="GameFontNormal" justifyH="LEFT" text="[Field]">
					<Size x="240" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="0" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.10"/>
				</FontString>
				<FontString name="$parentFieldValue" inherits="GameFontNormal" justifyH="LEFT" text="[Value]">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentFieldName"/>
						<Anchor point="RIGHT" x="0" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentValues" inherits="UIDropDownMenuTemplate" enableMouse="true">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentFieldName" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>

	<!-- Glance consult button : ButtonHilight-Square -->
	<Button name="TRP3_RegisterMiscGlanceButton" virtual="true">
		<Size x="40" y="40"/>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\UI-Quickslot-Depress"/>
		<NormalTexture file="Interface\ICONS\INV_Misc_QuestionMark"/>
		<Scripts>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
			<PostClick>
				TRP3_API.ui.misc.playUISound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
			</PostClick>
		</Scripts>
	</Button>

	<!-- Register Peek panel -->
	<Frame name="TRP3_RegisterMiscTemplate" virtual="true">
		<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border">
			<EdgeSize val="24"/>
		</Backdrop>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\SPELLBOOK\Spellbook-Page-1" setAllPoints="true">
					<Anchors>
						<Anchor point="TOPRIGHT" x="-5" y="-2"/>
						<Anchor point="BOTTOMRIGHT" x="-5" y="-2"/>
						<Anchor point="LEFT" x="5" y="0"/>
					</Anchors>
					<TexCoords left="0.07" right="1" top="0" bottom="0.975" />
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="TRP3_RegisterMiscView">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-20"/>
					<Anchor point="TOPRIGHT" x="-10" y="-20"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
				<Frames>
					<!-- PEEK -->
					<Frame name="TRP3_RegisterMiscViewGlance" inherits="TRP3_FieldSetFrame">
						<Size x="0" y="70"/>
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0"/>
							<Anchor point="TOPRIGHT" x="-3" y="0"/>
						</Anchors>
						<Frames>
							<Button name="TRP3_RegisterMiscViewGlanceSlot3" inherits="TRP3_RegisterMiscGlanceButton">
								<Anchors>
									<Anchor point="CENTER" x="0" y="0"/>
								</Anchors>
							</Button>
							<Button name="TRP3_RegisterMiscViewGlanceSlot2" inherits="TRP3_RegisterMiscGlanceButton">
								<Anchors>
									<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="TRP3_RegisterMiscViewGlanceSlot3" x="-45" y="0"/>
								</Anchors>
							</Button>
							<Button name="TRP3_RegisterMiscViewGlanceSlot1" inherits="TRP3_RegisterMiscGlanceButton">
								<Anchors>
									<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="TRP3_RegisterMiscViewGlanceSlot2" x="-45" y="0"/>
								</Anchors>
							</Button>
							<Button name="TRP3_RegisterMiscViewGlanceSlot4" inherits="TRP3_RegisterMiscGlanceButton">
								<Anchors>
									<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="TRP3_RegisterMiscViewGlanceSlot3" x="45" y="0"/>
								</Anchors>
							</Button>
							<Button name="TRP3_RegisterMiscViewGlanceSlot5" inherits="TRP3_RegisterMiscGlanceButton">
								<Anchors>
									<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="TRP3_RegisterMiscViewGlanceSlot4" x="45" y="0"/>
								</Anchors>
							</Button>
							<Button name="TRP3_RegisterMiscViewGlanceHelp" inherits="TRP3_HelpButton">
								<Size x="14" y="14"/>
								<Anchors>
									<Anchor point="LEFT" x="25" y="0"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>

					<!-- RP Style -->
					<Frame name="TRP3_RegisterMiscViewRPStyle" inherits="TRP3_FieldSetFrame">
						<Size x="0" y="200"/>
						<Anchors>
							<Anchor point="LEFT" x="0" y="0"/>
							<Anchor point="RIGHT" x="-3" y="0"/>
							<Anchor point="BOTTOM" x="0" y="0"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="TRP3_RegisterMiscViewRPStyleEmpty" text="[EMPTY]" inherits="GameFontNormalLarge">
									<Size x="0" y="10"/>
									<Anchors>
										<Anchor point="CENTER" x="0" y="0"/>
									</Anchors>
									<Color b="0.95" r="0.95" g="0.95"/>
								</FontString>
							</Layer>
						</Layers>
					</Frame>

					<!-- Currently -->
					<Frame name="TRP3_RegisterMiscViewCurrently" inherits="TRP3_FieldSetFrame">
						<Size x="0" y="100"/>
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_RegisterMiscViewGlance" x="0" y="-10"/>
							<Anchor point="LEFT" x="0" y="0"/>
							<Anchor point="RIGHT" x="-3" y="0"/>
							<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="TRP3_RegisterMiscViewRPStyle" x="0" y="10"/>
						</Anchors>
						<Frames>
							<Frame name="TRP3_RegisterMiscViewCurrentlyPoint">
								<Size x="10" y="10"/>
								<Anchors>
									<Anchor point="CENTER" x="0" y="0"/>
								</Anchors>
							</Frame>
							<Frame name="TRP3_RegisterMiscViewCurrentlyIC" inherits="TRP3_TextArea">
								<Anchors>
									<Anchor point="TOP" x="0" y="-25"/>
									<Anchor point="BOTTOM" x="0" y="10"/>
									<Anchor point="LEFT" x="10" y="0"/>
									<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="TRP3_RegisterMiscViewCurrentlyPoint" x="-5" y="0"/>
								</Anchors>
								<Layers>
									<Layer level="OVERLAY">
										<FontString name="TRP3_RegisterMiscViewCurrentlyICTitle" text="[title]" inherits="GameFontNormalSmall" justifyH="LEFT">
											<Anchors>
												<Anchor point="TOPLEFT" x="15" y="10"/>
												<Anchor point="TOPRIGHT" x="-15" y="10"/>
											</Anchors>
											<Color r="0.95" g="0.75" b="0.1"/>
										</FontString>
									</Layer>
								</Layers>
								<Frames>
									<Button name="TRP3_RegisterMiscViewCurrentlyICHelp" inherits="TRP3_HelpButton">
										<Size x="14" y="14"/>
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="13"/>
										</Anchors>
									</Button>
								</Frames>
							</Frame>

							<Frame name="TRP3_RegisterMiscViewCurrentlyOOC" inherits="TRP3_TextArea">
								<Size x="235" y="0"/>
								<Anchors>
									<Anchor point="TOP" x="0" y="-25"/>
									<Anchor point="BOTTOM" x="0" y="10"/>
									<Anchor point="RIGHT" x="-10" y="0"/>
									<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="TRP3_RegisterMiscViewCurrentlyPoint" x="5" y="0"/>
								</Anchors>
								<Layers>
									<Layer level="OVERLAY">
										<FontString name="TRP3_RegisterMiscViewCurrentlyOOCTitle" text="[title]" inherits="GameFontNormalSmall" justifyH="LEFT">
											<Anchors>
												<Anchor point="TOPLEFT" x="15" y="10"/>
												<Anchor point="TOPRIGHT" x="-15" y="10"/>
											</Anchors>
											<Color r="0.95" g="0.75" b="0.1"/>
										</FontString>
									</Layer>
								</Layers>
								<Frames>
									<Button name="TRP3_RegisterMiscViewCurrentlyOOCHelp" inherits="TRP3_HelpButton">
										<Size x="14" y="14"/>
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="13"/>
										</Anchors>
									</Button>
								</Frames>
							</Frame>
						</Frames>
					</Frame>

				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="TRP3_AtFirstGlanceEditor" inherits="TRP3_HoveredFrame" parent="UIParent" hidden="true">
		<Size x="300" y="175"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" text="[GLANCE_EDITOR]" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="35" y="-15"/>
						<Anchor point="TOPRIGHT" x="-30" y="-15"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="$parentActive" inherits="TRP3_CheckBox" checked="true">
				<Anchors>
					<Anchor point="RIGHT" x="-5" y="0" relativeTo="$parentTitle" relativePoint="LEFT"/>
				</Anchors>
			</CheckButton>
			<EditBox name="$parentName" inherits="TRP3_TitledHelpEditBox">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="-10" y="-10" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT"/>
					<Anchor point="RIGHT" x="-25" y="0"/>
				</Anchors>
			</EditBox>
			<Button name="$parentIcon" inherits="TRP3_IconButton">
				<Anchors>
					<Anchor point="LEFT" x="24" y="-15"/>
				</Anchors>
			</Button>
			<Button name="$parentApply" inherits="TRP3_CommonButton">
				<Size x="100" y="20"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
			</Button>
			<Frame name="$parentText" inherits="TRP3_TextArea">
				<Anchors>
					<Anchor point="TOP" x="0" y="-5" relativePoint="BOTTOM" relativeTo="$parentName"/>
					<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$parentApply" x="0" y="2"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentIcon" x="10" y="0"/>
				</Anchors>
			</Frame>

			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
					</OnClick>
					<PostClick>
						TRP3_API.ui.misc.playUISound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
					</PostClick>
				</Scripts>
			</Button>

			<!-- RESIZING BUTTON -->
			<Button name="TRP3_AtFirstGlanceEditorResizeButton" inherits="TRP3_ResizeButton" hidden="false">
				<KeyValues>
					<KeyValue key="resizableFrame" value="TRP3_AtFirstGlanceEditor" type="global"/>
					<KeyValue key="minWidth" value="275" type="number"/>
					<KeyValue key="minHeight" value="150" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

</Ui>