	<!-- Images browser  -->
    <Frame name="TRP3_ImageBrowser" parent="TRP3_PopupsFrame" hidden="true">
		<Backdrop bgFile="Interface\AchievementFrame\UI-Achievement-StatsBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="415"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="3" bottom="3"/>
			</BackgroundInsets>
		</Backdrop>
		<Size x="420" y="400"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Frames>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						TRP3_ImageBrowser:Hide();
						TRP3_API.popup.hidePopups();
					</OnClick>
				</Scripts>
			</Button>
			<Frame name="TRP3_ImageBrowserContent" inherits="TRP3_InnerFrame">
				<Size x="305" y="285"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-35"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="TRP3_ImageBrowserContentTexture">
							<Size x="250" y="0"/>
							<Anchors>
								<Anchor point="CENTER" x="-5" y="0"/>
							</Anchors>
							<Color b="1" r="1" g="1"/>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="TRP3_ImageBrowserContentURL" text="[URL]" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOP" x="0" y="-10"/>
								<Anchor point="LEFT" x="25" y="0"/>
								<Anchor point="RIGHT" x="-25" y="0"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button name="TRP3_ImageBrowserSelect" inherits="TRP3_CommonButton">
						<Size x="120" y="20"/>
						<Anchors>	
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</Button>
					<Slider name="TRP3_ImageBrowserContentSlider" parentKey="slider" inherits="TRP3_Scrollbar" />
				</Frames>
			</Frame>
			<!-- Filter section -->
			<Frame name="TRP3_ImageBrowserFilter">
				<Size x="0" y="60"/>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="415"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="3" bottom="3"/>
					</BackgroundInsets>
				</Backdrop>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="TRP3_ImageBrowserTotal" text="[placeholder total]" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="-12"/>
								<Anchor point="TOPRIGHT" x="0" y="-12"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<EditBox name="TRP3_ImageBrowserFilterBox" inherits="TRP3_TitledEditBox">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</EditBox>
				</Frames>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="TRP3_ImageBrowserTitle" text="[IMAGE BROWSER]" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
</Ui>