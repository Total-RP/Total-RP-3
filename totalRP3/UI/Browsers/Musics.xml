<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<!-- Music browser line  -->
	<Button name="TRP3_MusicBrowserLine" virtual="true" inherits="TRP3_TooltipBackdropTemplate">
		<Size x="0" y="28"/>
		<Anchors>
			<Anchor point="LEFT" x="8" y="0"/>
			<Anchor point="RIGHT" x="-25" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" text="[placeholder_line]" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="15" y="0"/>
						<Anchor point="RIGHT" x="-15" y="0"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentHighlight" inherits="GlowBorderTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:SetAlpha(0.35);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad inherit="prepend">
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
				_G[self:GetName().."Highlight"]:Show();
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
				_G[self:GetName().."Highlight"]:Hide();
			</OnLeave>
		</Scripts>
	</Button>

	<!-- Music browser  -->
	<Frame name="TRP3_MusicBrowser" parent="TRP3_PopupsFrame" hidden="true" inherits="TRP3_BrowserDialogBackdropTemplate">
		<Size x="420" y="400"/>
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_LIGHT_GREY" type="global"/>
		</KeyValues>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Frames>
			<Button parentKey="CloseButton" inherits="TRP3_StyledButtonTemplate">
				<Size x="24" y="24"/>
				<KeyValues>
					<KeyValue key="styleName" value="CloseButton" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						TRP3_MusicBrowser:Hide();
						TRP3_API.popup.hidePopups();
					</OnClick>
				</Scripts>
			</Button>
			<Frame name="TRP3_MusicBrowserContent" inherits="TRP3_InnerFrame">
				<Size x="390" y="290"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-35"/>
				</Anchors>
				<Frames>
					<Slider name="TRP3_MusicBrowserContentSlider" parentKey="slider" inherits="TRP3_Scrollbar" />
				</Frames>
			</Frame>
			<!-- Filter section -->
			<Frame name="TRP3_MusicBrowserFilter" inherits="TRP3_TooltipBackdropTemplate">
				<Size x="0" y="60"/>
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_LIGHT_GREY" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="TRP3_MusicBrowserTotal" text="[placeholder total]" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="-12"/>
								<Anchor point="TOPRIGHT" x="0" y="-12"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<EditBox name="TRP3_MusicBrowserFilterBox" inherits="TRP3_TitledEditBox">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</EditBox>
					<Button name="TRP3_MusicBrowserFilterStop" inherits="TRP3_CommonButton">
						<Size x="120" y="22"/>
						<Anchors>
							<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
						</Anchors>
						<Scripts>
							<OnClick>
								TRP3_API.utils.music.stopMusic();
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="TRP3_MusicBrowserTitle" text="[placeholder]" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

</Ui>
