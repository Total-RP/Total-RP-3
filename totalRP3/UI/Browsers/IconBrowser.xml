<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
	<Include file="IconBrowser.lua"/>

	<!-- FIXME: Hacky hack hack -->
	<Texture name="TRP3_IconBrowserButtonTodoTemplate" virtual="true">
		<Animations>
			<AnimationGroup parentKey="PulseAnimation" looping="REPEAT" setToFinalAlpha="true">
				<Alpha childKey="Icon" fromAlpha="1" toAlpha="0.75" duration="1" smoothing="IN" order="1"/>
				<Alpha childKey="Icon" fromAlpha="0.75" toAlpha="1" duration="1" smoothing="OUT" order="2"/>
				<Scripts>
					<OnLoad method="Play"/>
				</Scripts>
			</AnimationGroup>
		</Animations>
	</Texture>

	<CheckButton name="TRP3_IconBrowserButton" mixin="TRP3_IconBrowserButtonMixin" virtual="true">
		<Size x="40" y="40"/>
		<HitRectInsets left="2" right="2" top="2" bottom="2"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="Forge-ColorSwatchBackground"/>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="Icon" file="Interface\ICONS\INV_Misc_QuestionMark">
					<Anchors>
						<Anchor point="TOPLEFT" x="3" y="-3"/>
						<Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask" file="Interface\AddOns\totalRP3\Resources\UI\common-iconmask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon" x="2" y="-2"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon" x="-2" y="2"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="SelectedTexture" atlas="Forge-ColorSwatchSelection" inherits="TRP3_IconBrowserButtonTodoTemplate" hidden="true"/>
			</Layer>
		</Layers>
		<PushedTexture atlas="Forge-ColorSwatchBackground"/>
		<HighlightTexture atlas="Forge-ColorSwatchHighlight" inherits="TRP3_IconBrowserButtonTodoTemplate"/>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</CheckButton>

	<Frame name="TRP3_IconBrowserEmptyTextFrame" virtual="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalHuge">
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="CENTER" y="3"/>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Text" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOP" relativePoint="CENTER" y="-3"/>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<StatusBar name="TRP3_IconBrowserSearchProgressBar" virtual="true" minValue="0" maxValue="1" alpha="0">
		<Size x="250" y="14"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background">
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="-2"/>
						<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
					<Color r="0" g="0" b="0" a="0.5"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="BorderLeft" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
					<Size x="16" y="0"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-6" y="5"/>
						<Anchor point="BOTTOMLEFT" x="-6" y="-5"/>
					</Anchors>
					<TexCoords left="0" right="0.0625" top="0" bottom="0.75"/>
				</Texture>
				<Texture parentKey="BorderRight" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
					<Size x="16" y="0"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="6" y="5"/>
						<Anchor point="BOTTOMRIGHT" x="6" y="-5"/>
					</Anchors>
					<TexCoords left="0.812" right="0.8745" top="0" bottom="0.75"/>
				</Texture>
				<Texture parentKey="BorderCenter" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
					<Size x="16"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.BorderLeft" relativePoint="TOPRIGHT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderRight" relativePoint="BOTTOMLEFT"/>
					</Anchors>
					<TexCoords left="0.0625" right="0.812" top="0" bottom="0.75"/>
				</Texture>
				<FontString parentKey="Text" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<BarTexture file="Interface\TargetingFrame\UI-StatusBar">
			<Color r="0" g="0.75" b="0"/>
		</BarTexture>
		<Animations>
			<AnimationGroup parentKey="AnimInOut" setToFinalAlpha="true">
				<Translation offsetY="-10" duration="0.25" order="1" endDelay="0.2"/>
				<Alpha fromAlpha="1" toAlpha="0" duration="0.25" order="1" endDelay="0.2"/>
			</AnimationGroup>
		</Animations>
	</StatusBar>

	<Frame name="TRP3_IconBrowserFrame" mixin="TRP3_IconBrowserMixin" enableMouse="true">
		<Size x="425" y="420"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge">
					<Size y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" y="-17"/>
						<Anchor point="TOPRIGHT" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Content" setAllPoints="true">
			</Frame>
			<Button parentKey="CloseButton" inherits="TRP3_StyledButtonTemplate">
				<Size x="24" y="24"/>
				<KeyValues>
					<KeyValue key="styleName" value="CloseButton" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
			</Button>
			<EditBox parentKey="SearchBox" inherits="SearchBoxTemplate" autoFocus="false">
				<Size x="200" y="22"/>
				<Anchors>
					<Anchor point="TOP" y="-40"/>
					<Anchor point="RIGHT" x="-12"/>
				</Anchors>
			</EditBox>
			<Frame parentKey="ScrollContent">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.SearchBox" relativePoint="BOTTOM" y="-5"/>
					<Anchor point="LEFT" x="10"/>
					<Anchor point="RIGHT" x="-10"/>
					<Anchor point="BOTTOM" y="10"/>
				</Anchors>
				<Frames>
					<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
						<Anchors>
							<Anchor point="TOP" y="-4"/>
							<Anchor point="LEFT" x="4"/>
							<Anchor point="RIGHT" x="-4"/>
							<Anchor point="BOTTOM" y="4"/>
						</Anchors>
					</Frame>
					<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
						<Anchors>
							<Anchor point="TOPRIGHT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="-8" y="-4"/>
							<Anchor point="BOTTOMRIGHT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="-8" y="4"/>
						</Anchors>
					</EventFrame>
					<Frame parentKey="EmptyText" inherits="TRP3_IconBrowserEmptyTextFrame">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox"/>
							<Anchor point="BOTTOMRIGHT" relativeKey="$parent.ScrollBox"/>
						</Anchors>
					</Frame>
					<Frame parentKey="Backdrop" inherits="BackdropTemplate" setAllPoints="true" useParentLevel="true">
						<KeyValues>
							<KeyValue key="backdropInfo" value="TRP3_BACKDROP_MIXED_DIALOG_TOOLTIP_415_16_3333" type="global"/>
						</KeyValues>
					</Frame>
					<!-- FIXME: Hacky hack hack -->
					<Frame parentKey="Thing" frameLevel="9999" enableMouse="true" hidden="true">
						<Anchors>
							<Anchor point="TOP" y="-4"/>
							<Anchor point="LEFT" x="4"/>
							<Anchor point="RIGHT" x="-4"/>
							<Anchor point="BOTTOM" y="4"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<Texture>
									<Color a="0.7"/>
								</Texture>
							</Layer>
						</Layers>
						<Animations>
							<AnimationGroup parentKey="AnimIn" setToFinalAlpha="true" inherits="VisibleWhilePlayingAnimGroupTemplate">
								<Alpha fromAlpha="0" toAlpha="1" duration="0.2" startDelay="0.2"/>
							</AnimationGroup>
						</Animations>
					</Frame>
					<StatusBar parentKey="ProgressBar" inherits="TRP3_IconBrowserSearchProgressBar" frameLevel="10000">
						<Anchors>
							<Anchor point="CENTER" y="0"/>
						</Anchors>
					</StatusBar>
				</Frames>
			</Frame>
			<Frame parentKey="Backdrop" inherits="BackdropTemplate" setAllPoints="true" useParentLevel="true">
				<KeyValues>
					<KeyValue key="backdropInfo" value="TRP3_BACKDROP_MIXED_ACHIEVEMENT_TOOLTIP_415_16_3333" type="global"/>
				</KeyValues>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>
