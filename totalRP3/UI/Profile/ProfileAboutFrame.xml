<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
	<Include file="ProfileAboutFrame.lua"/>

	<Font name="TRP3_AboutHTMLParagraphFont" inherits="SystemFont_Shadow_Med1">
		<Color r="1" g="1" b="1"/>
	</Font>

	<Font name="TRP3_AboutHTMLHeader1Font" inherits="SystemFont_Shadow_Huge3">
		<Color r="1" g="1" b="1"/>
	</Font>

	<Font name="TRP3_AboutHTMLHeader2Font" inherits="SystemFont_Shadow_Huge1">
		<Color r="1" g="1" b="1"/>
	</Font>

	<Font name="TRP3_AboutHTMLHeader3Font" inherits="SystemFont_Shadow_Large">
		<Color r="1" g="1" b="1"/>
	</Font>

	<SimpleHTML name="TRP3_AboutHTMLFrameTemplate" inherits="TRP3_HTMLFrameTemplate" virtual="true">
		<FontString inherits="TRP3_AboutHTMLParagraphFont"/>
		<FontStringHeader1 inherits="TRP3_AboutHTMLHeader1Font"/>
		<FontStringHeader2 inherits="TRP3_AboutHTMLHeader2Font"/>
		<FontStringHeader3 inherits="TRP3_AboutHTMLHeader3Font"/>
	</SimpleHTML>

	<Frame name="TRP3_AboutHTMLElementTemplate" mixin="TRP3_AboutHTMLElementMixin" inherits="ResizeLayoutFrame" virtual="true">
		<Frames>
			<SimpleHTML parentKey="Text" inherits="TRP3_AboutHTMLFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="TOPRIGHT"/>
				</Anchors>
			</SimpleHTML>
		</Frames>
	</Frame>

	<Frame name="TRP3_AboutHTMLWithTitleElementTemplate" mixin="TRP3_AboutHTMLWithTitleElementMixin" inherits="ResizeLayoutFrame" virtual="true">
		<KeyValues>
			<KeyValue key="heightPadding" value="20" type="number"/>
		</KeyValues>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" wordwrap="false">
					<Anchors>
						<Anchor point="TOP" y="-10"/>
						<Anchor point="LEFT" x="10"/>
						<Anchor point="RIGHT" x="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Backdrop" inherits="TRP3_TooltipBackdropEdgeTemplate" setAllPoints="true" useParentLevel="true">
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
					<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
				</KeyValues>
			</Frame>
			<SimpleHTML parentKey="Text" inherits="TRP3_AboutHTMLFrameTemplate">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" y="-5"/>
					<Anchor point="LEFT" x="15"/>
					<Anchor point="RIGHT" x="-15"/>
				</Anchors>
			</SimpleHTML>
		</Frames>
	</Frame>

	<Frame name="TRP3_AboutHTMLWithIconElementTemplate" mixin="TRP3_AboutHTMLWithIconElementMixin" inherits="ResizeLayoutFrame" virtual="true">
		<KeyValues>
			<KeyValue key="heightPadding" value="-20" type="number"/>
			<KeyValue key="minimumHeight" value="78" type="number"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="Backdrop" inherits="TRP3_TooltipBackdropEdgeTemplate" setAllPoints="true" useParentLevel="true">
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
					<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
				</KeyValues>
			</Frame>
			<Frame parentKey="Icon" inherits="TRP3_BorderedIconTemplate">
				<Size x="58" y="58"/>
			</Frame>
			<SimpleHTML parentKey="Text" inherits="TRP3_AboutHTMLFrameTemplate"/>
		</Frames>
	</Frame>

	<Frame name="TRP3_ProfileAboutFrameTemplate" mixin="TRP3_ProfileAboutFrameMixin" virtual="true">
		<KeyValues>
			<KeyValue key="paddingTop" value="10" type="number"/>
			<KeyValue key="paddingBottom" value="10" type="number"/>
			<KeyValue key="paddingLeft" value="10" type="number"/>
			<KeyValue key="paddingRight" value="10" type="number"/>
			<KeyValue key="spacing" value="10" type="number"/>
			<KeyValue key="canInterpolateScroll" value="true" type="boolean"/>
			<KeyValue key="panExtentMultiplier" value="2.5" type="number"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="ScrollBox" mixin="TRP3_InterpolatedScrollBoxMixin" inherits="WowScrollBoxList"/>
			<EventFrame parentKey="ScrollBar" mixin="TRP3_InterpolatedScrollBarMixin" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-10" y="-6"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="6"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Frame name="TRP3_ProfileAboutFrame" inherits="TRP3_ProfileAboutFrameTemplate" parent="UIParent" toplevel="true" enableMouse="true" resizable="true" dontSavePosition="true" movable="true">
		<Size x="400" y="400"/>
		<Anchors>
			<Anchor point="LEFT"/>
		</Anchors>
		<Frames>
			<Button parentKey="ResizeButton" inherits="PanelResizeButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMRIGHT"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad inherit="prepend">
				self.ResizeButton:Init(self, 100, 100);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
