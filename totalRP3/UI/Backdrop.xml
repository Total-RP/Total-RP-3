				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="TRP3_PageBackgroundProfiles" inherits="TRP3_RegionResizeTemplate" clipChildren="true" useParentLevel="true" virtual="true">
		<KeyValues>
			<KeyValue key="resizeMode" value="TRP3_RegionResizeMode.Fill" type="global"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface/AddOns/totalRP3/Resources/UI/ui-frame-profiles-background">
					<KeyValues>
						<KeyValue key="sourceWidth" value="922" type="number"/>
						<KeyValue key="sourceHeight" value="620" type="number"/>
						<KeyValue key="extraWidth" value="50" type="number"/>
						<KeyValue key="extraHeight" value="50" type="number"/>
					</KeyValues>
					<Anchors>
						<Anchor point="TOPLEFT" x="-50" y="50"/>
					</Anchors>
					<TexCoords left="0.0009765625" right="0.9013671875" top="0.0009765625" bottom="0.6064453125"/>
				</Texture>
			</Layer>
		</Layers>
