<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<Frame name="TRP3_ProfileEditorLabelTemplate" mixin="TRP3_ProfileEditorLabelMixin" enableMouse="true" virtual="true">
		<Size y="28"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="TooltipIcon" atlas="Ping_Chat_Warning" useAtlasSize="false" collapsesLayout="true">
					<Size x="14" y="14"/>
					<Anchors>
						<Anchor point="RIGHT" x="-4"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Title" inherits="SystemFont_Shadow_Med2" justifyH="LEFT" justifyV="MIDDLE" wordwrap="false" nonspacewrap="false">
					<Anchors>
						<Anchor point="LEFT" x="4"/>
						<Anchor point="RIGHT" relativeKey="$parent.TooltipIcon" x="-4"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="TooltipIconHighlight" atlas="Ping_Chat_Warning" useAtlasSize="false" alphaMode="ADD" alpha="0.4">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.TooltipIcon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.TooltipIcon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>
</Ui>
