<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<Frame name="TRP3_ProfileEditorTextLabelTemplate" mixin="TRP3_ProfileEditorTextLabelMixin" enableMouse="true" virtual="true">
		<Size y="28"/>
		<KeyValues>
			<KeyValue key="numLetters" value="0" type="number"/>
			<KeyValue key="maxLetters" value="math.huge" type="global"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="TooltipIcon" inherits="TRP3_ProfileEditorTooltipIconTemplate" collapsesLayout="true" hidden="true">
				<Anchors>
					<Anchor point="RIGHT"/>
				</Anchors>
			</Frame>
			<Frame parentKey="WarningIcon" inherits="TRP3_ProfileEditorWarningIconTemplate" collapsesLayout="true" hidden="true">
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.TooltipIcon" relativePoint="LEFT"/>
				</Anchors>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="LetterCount" inherits="TRP3_ProfileEditorLetterCountTemplate" justifyH="RIGHT" justifyV="MIDDLE" collapsesLayout="true" hidden="true">
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.WarningIcon" relativePoint="LEFT"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Title" inherits="TRP3_ProfileEditorLabelTitleTemplate" justifyH="LEFT" justifyV="MIDDLE">
					<Anchors>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT" relativeKey="$parent.LetterCount" relativePoint="LEFT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="TRP3_ProfileEditorTextControlTemplate" inherits="TRP3_ProfileEditorControlTemplate" mixin="TRP3_ProfileEditorTextControlMixin" virtual="true">
		<Frames>
			<Frame parentKey="Label" inherits="TRP3_ProfileEditorTextLabelTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="2"/>
					<Anchor point="TOPRIGHT" x="-2"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>
</Ui>
