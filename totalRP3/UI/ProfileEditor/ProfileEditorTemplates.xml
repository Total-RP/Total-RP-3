<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<FontString name="TRP3_ProfileEditorLabelTitleTemplate" inherits="GameFontNormalMed2" mixin="AutoScalingFontStringMixin" wordwrap="false" nonspacewrap="false" virtual="true">
		<KeyValues>
			<KeyValue key="minLineHeight" value="12" type="number"/>
		</KeyValues>
	</FontString>

	<Frame name="TRP3_ProfileEditorTooltipIconTemplate" virtual="true">
		<Size x="24" y="24"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Icon" file="Interface\ICONS\TEMP" useAtlasSize="false">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="Highlight" file="Interface\ICONS\TEMP" useAtlasSize="false" alphaMode="ADD" alpha="0.4">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="TRP3_ProfileEditorWarningIconTemplate" virtual="true">
		<Size x="24" y="24"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Icon" atlas="services-icon-warning" useAtlasSize="false">
					<Size x="18" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="Highlight" atlas="services-icon-warning" useAtlasSize="false" alphaMode="ADD" alpha="0.4">
					<Size x="18" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<FontString name="TRP3_ProfileEditorLetterCountTemplate" inherits="GameFontHighlight" mixin="TRP3_ProfileEditorLetterCountMixin" wordwrap="false" nonspacewrap="false" virtual="true">
		<KeyValues>
			<KeyValue key="defaultColor" value="HIGHLIGHT_FONT_COLOR" type="global"/>
			<KeyValue key="warningColor" value="WARNING_FONT_COLOR" type="global"/>
		</KeyValues>
	</FontString>
</Ui>
