<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\..\UI.xsd">
	
	<!-- Music browser line  -->
	<Button name="TRP3_MusicBrowserLine" virtual="true">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="24"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="0" y="28"/>
		<Anchors>
			<Anchor point="LEFT" x="15" y="0"/>
			<Anchor point="RIGHT" x="-25" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" text="[placeholder_line]" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="15" y="0"/>
						<Anchor point="RIGHT" x="-15" y="0"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>
	
	<!-- Music browser  -->
    <Frame name="TRP3_MusicBrowser" parent="TRP3_PopupsFrame" hidden="true">
		<Backdrop bgFile="Interface\AchievementFrame\UI-Achievement-StatsBackground" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="420" y="400"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Frames>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						TRP3_API.popup.hidePopups();
					</OnClick>
				</Scripts>
			</Button>
			<Frame name="TRP3_MusicBrowserContent">
				<Size x="390" y="295"/>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
					<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
				</Backdrop>
				<Anchors>
					<Anchor point="TOP" x="0" y="-35"/>
				</Anchors>
				<Frames>
					<Slider name="TRP3_MusicBrowserContentSlider" inherits="OptionsSliderTemplate">
						<Size x="15" y="0"/>
						<Anchors>
							<Anchor point="TOP" x="0" y="-5"/>
							<Anchor point="RIGHT" x="0" y="0"/>
							<Anchor point="BOTTOM" x="0" y="5"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								TRP3_MusicBrowserContentSliderText:SetText("");
								TRP3_MusicBrowserContentSliderHigh:SetText("");
								TRP3_MusicBrowserContentSliderLow:SetText("");
								self:SetMinMaxValues(0, 6);
								self:SetValueStep(1);
								self:SetOrientation("VERTICAL");
							</OnLoad>
						</Scripts>
					</Slider>
				</Frames>
			</Frame>
			<!-- Filter section -->
			<Frame name="TRP3_MusicBrowserFilter">
				<Size x="0" y="60"/>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
					<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
				</Backdrop>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="TRP3_MusicBrowserTotal" text="[placeholder total]" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="-12"/>
								<Anchor point="TOPRIGHT" x="0" y="-12"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<EditBox name="TRP3_MusicBrowserFilterBox" inherits="TRP3_TitledEditBox">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</EditBox>
					<Button name="TRP3_MusicBrowserFilterStop" inherits="TRP3_CommonButton">
						<Anchors>
							<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
						</Anchors>
						<Scripts>
							<OnClick>
								TRP3_API.utils.music.stop();
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="TRP3_MusicBrowserTitle" text="[placeholder]" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
</Ui>