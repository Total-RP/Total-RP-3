	<!-- 
		WIDGETS
	 -->

	<Frame name="TRP3_ConfigH1" virtual="true">
		<Size x="50" y="35"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormalHuge" justifyH="LEFT" text="[h1_title]">
					<Size x="300" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="0" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="TRP3_ConfigNote" virtual="true">
		<Size x="50" y="35"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="GameFontNormal" justifyH="LEFT" text="[note]">
					<Size x="360" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentText" x="-10" y="1"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigColorPicker" virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="203" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<Button name="$parentPicker" inherits="TRP3_ColorPickerButton">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="32" y="0"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigEditBox" virtual="true">
		<Size x="50" y="25"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="225" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<EditBox name="$parentBox" inherits="TRP3_TitledEditBox" virtual="true">
				<Size x="140" y="18"/>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="10" y="0"/>
				</Anchors>
			</EditBox>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigDropDown" virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="203" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<Frame name="$parentDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="10" y="0"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigCheck" virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="220" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<CheckButton name="$parentCheck" inherits="TRP3_CheckBox" enableMouse="true">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="10" y="0"/>
				</Anchors>
			</CheckButton>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigButton" virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="220" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<Button name="$parentButton" inherits="TRP3_CommonButton" enableMouse="true">
				<Size x="150" y="20"/>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="10" y="0"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigSlider" virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" text="[editbox_title]">
					<Size x="225" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="25" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentHelp" inherits="TRP3_HelpButton">
				<Size x="14" y="14"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentTitle" x="-10" y="1"/>
				</Anchors>
			</Button>
			<Slider name="$parentSlider" inherits="OptionsSliderTemplate">
				<Size x="140" y="15"/>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentValText" inherits="GameFontNormal" justifyH="CENTER" text="[value]">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="LEFT"/>
								<Anchor point="RIGHT"/>
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTitle" x="10" y="0"/>
				</Anchors>
			</Slider>
		</Frames>
	</Frame>

	<!-- 
		GENERAL SETTINGS
	 -->

	<Frame name="TRP3_ConfigurationPage" virtual="true">
		<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="418"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Size x="530" y="0"/>
		<Anchors>
			<Anchor point="TOPRIGHT" x="0" y="0"/>
			<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\AchievementFrame\UI-Achievement-StatsBackground">
					<Size x="526" y="0"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.07" right="1" top="0" bottom="0.98"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontNormalHuge" justifyH="CENTER" text="[settings_title]">
					<Anchors>
						<Anchor point="TOPLEFT" x="50" y="-25"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentInner">
				<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground"
						  edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize>
						<AbsValue val="32"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="418"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
				<Size x="450" y="380"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="20"/>
				</Anchors>
				<Frames>
					<ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
						<Size x="420" y="360"/>
						<Anchors>
							<Anchor point="RIGHT" x="-17" y="0"/>
						</Anchors>
						<ScrollChild>
							<Frame name="$parentContainer">
								<Size x="50" y="50"/>
							</Frame>
						</ScrollChild>
					</ScrollFrame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

</Ui>