<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<Frame name="TRP3_ConfigurationModuleFrame" virtual="true" inherits="TRP3_TooltipBackdropTemplate">
		<Size x="0" y="60"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentModuleName" text="[name]" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" x="35" y="-8"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
				<FontString name="$parentModuleVersion" text="[version]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="200" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentModuleName" x="5" y="-5"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.1"/>
				</FontString>
				<FontString name="$parentModuleID" text="[id]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentModuleVersion" x="0" y="-3"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.1"/>
				</FontString>
				<FontString name="$parentStatus" text="[status]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentModuleVersion" x="0" y="-3"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentInfo" inherits="TRP3_HelpButton">
				<Anchors>
					<Anchor point="TOPLEFT" x="13" y="-7"/>
				</Anchors>
			</Button>
			<Button name="$parentAction" inherits="TRP3_StyledButtonTemplate">
				<Size x="24" y="24"/>
				<KeyValues>
					<KeyValue key="styleName" value="MinimizeButton" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="TRP3_ConfigurationModule" parent="TRP3_MainFramePageContainer" hidden="true" inherits="TRP3_TooltipBackdropEdgeTemplate">
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GOLD" type="global"/>
		</KeyValues>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontHighlightHuge" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-20"/>
						<Anchor point="RIGHT" x="-16"/>
					</Anchors>
				</FontString>
				<Texture parentKey="Divider" atlas="Options_HorizontalDivider" useAtlasSize="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" y="-16"/>
						<Anchor point="RIGHT" relativeKey="$parent.Title" relativePoint="RIGHT"/>
					</Anchors>
					<Color r="1" g="0.675" b="0.125"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<ScrollFrame parentKey="ScrollFrame" inherits="ScrollFrameTemplate">
				<KeyValues>
					<KeyValue key="scrollBarTemplate" value="MinimalScrollBar" type="string"/>
					<KeyValue key="scrollBarX" value="-8" type="number"/>
					<KeyValue key="scrollBarTopY" value="-8" type="number"/>
					<KeyValue key="scrollBarBottomY" value="8" type="number"/>
					<KeyValue key="scrollBarHideIfUnscrollable" value="true" type="boolean"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.Divider" relativePoint="BOTTOMLEFT" y="-1"/>
					<Anchor point="BOTTOMRIGHT" x="-16" y="4"/>
				</Anchors>
				<ScrollChild>
					<Frame parentKey="Content"/>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
	</Frame>

	<Include file="ModuleManagement.lua"/>
	<Include file="Flyway\Flyway.lua"/>
	<Include file="Flyway\FlywayPatches.lua"/>
	<Include file="Dashboard\Dashboard.xml"/>
	<Include file="Map\Map.xml"/>
	<Include file="Register\Register.xml"/>
	<Include file="Languages\Languages.xml"/>
	<Include file="ChatFrame\ChatFrame.xml"/>
	<Include file="TargetFrame\TargetFrame.xml"/>
	<Include file="Toolbar\Toolbar.xml"/>
	<Include file="Importer\Importer.xml"/>
	<Include file="TooltipSkins\TooltipSkins.xml"/>
	<Include file="ChatLinks\ChatLinks.xml"/>
	<Include file="UnitPopups\UnitPopups.xml"/>
	<Include file="NamePlates\NamePlates.xml"/>
	<Include file="Analytics\Analytics.xml"/>
	<Include file="Automation\Automation.xml"/>
	<Include file="Launcher\Launcher.xml"/>
</Ui>
