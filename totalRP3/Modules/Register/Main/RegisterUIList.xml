<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
	<Frame name="TRP3_RegisterListLine" virtual="true">
		<Size y="28"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture alphaMode="BLEND" file="Interface\ACHIEVEMENTFRAME\UI-Achievement-Title">
					<Anchors>
						<Anchor point="TOPLEFT" y="-1"/>
						<Anchor point="BOTTOMRIGHT" y="1"/>
					</Anchors>
					<TexCoords top="0.40625" bottom="0.60125" left="0" right="1"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Flags" inherits="GameFontHighlight" justifyH="CENTER" text="[Flags ?]">
					<Size x="134" y="10"/>
					<Anchors>
						<Anchor point="RIGHT" x="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Realm" inherits="GameFontHighlight" justifyH="LEFT" text="[Realm ?]">
					<Size x="110" y="10"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.Flags" relativePoint="LEFT" x="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="GuildOrOwner" inherits="GameFontHighlight" justifyH="LEFT" text="[Guild / Owner ?]">
					<Size x="110" y="10"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.Realm" relativePoint="LEFT" x="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Time" inherits="GameFontHighlight" justifyH="LEFT" text="[Time ?]">
					<Size x="110" y="10"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.GuildOrOwner" relativePoint="LEFT" x="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Relations" inherits="GameFontHighlight" justifyH="LEFT" text="[Relations ?]">
					<Size x="110" y="10"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.Time" relativePoint="LEFT" x="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Name" inherits="GameFontNormal" justifyH="LEFT" text="[Characters name]">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="LEFT" x="30"/>
						<Anchor point="RIGHT" relativeKey="$parent.Relations" relativePoint="LEFT" x="-15"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="Click" propagateMouseInput="Motion">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Name"/>
					<Anchor point="RIGHT" relativeKey="$parent.Flags"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<HighlightTexture alphaMode="ADD" file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar">
					<TexCoords bottom="0" left="0.25" top="1" right="1" />
				</HighlightTexture>
			</Button>
			<Button parentKey="ClickFlags">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Flags"/>
					<Anchor point="RIGHT" relativeKey="$parent.Flags"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button parentKey="ClickRealm">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Realm"/>
					<Anchor point="RIGHT" relativeKey="$parent.Realm"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button parentKey="ClickGuild">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.GuildOrOwner"/>
					<Anchor point="RIGHT" relativeKey="$parent.GuildOrOwner"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button parentKey="ClickRelation">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Relations"/>
					<Anchor point="RIGHT" relativeKey="$parent.Relations"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button parentKey="ClickName">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Name"/>
					<Anchor point="RIGHT" relativeKey="$parent.Name"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<CheckButton parentKey="Select" inherits="TRP3_CheckBox" checked="false">
				<Anchors>
					<Anchor point="LEFT"/>
				</Anchors>
			</CheckButton>
		</Frames>
	</Frame>

	<Frame name="TRP3_RegisterList" hidden="true">
		<Frames>
			<Frame name="TRP3_RegisterListContainer" parentKey="Container" useParentLevel="true" inherits="TRP3_TooltipBackdropEdgeTemplate">
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="TRP3_RegisterListEmpty" parentKey="Empty" inherits="GameFontHighlightLarge" justifyH="LEFT" wordwrap="false" text="[EMPTY]">
							<Size y="10"/>
							<Anchors>
								<Anchor point="CENTER" y="30"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Size x="0" y="0" />
				<Frames>
					<Frame parentKey="Background" inherits="TRP3_PageBackgroundParchment">
						<Anchors>
							<Anchor point="TOPLEFT" x="4" y="-4"/>
							<Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
						</Anchors>
					</Frame>
					<Frame name="TRP3_RegisterListHeader" parentKey="Header">
						<Size x="0" y="22" />
						<Anchors>
							<Anchor point="TOPLEFT" x="15" y="-15" />
							<Anchor point="TOPRIGHT" x="-10" y="-15" />
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture alphaMode="BLEND" file="Interface\ACHIEVEMENTFRAME\UI-Achievement-Title">
									<Size x="0" y="23" />
									<Anchors>
										<Anchor point="LEFT" x="0" y="0" />
										<Anchor point="RIGHT" x="0" y="0" />
									</Anchors>
									<TexCoords top="0.0" bottom="0.335" left="0" right="1" />
								</Texture>
							</Layer>
							<Layer level="OVERLAY">
								<FontString name="TRP3_RegisterListHeaderFlags" parentKey="Flags" inherits="GameFontNormal" justifyH="CENTER" text="[Flags ?]">
									<Size x="134" y="10" />
									<Anchors>
										<Anchor point="RIGHT" x="-15" y="0" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderRealm" parentKey="Realm" inherits="GameFontNormal" justifyH="LEFT" text="[Characters realm]">
									<Size x="110" y="10" />
									<Anchors>
										<Anchor point="RIGHT" x="-15" y="0" relativePoint="LEFT" relativeTo="TRP3_RegisterListHeaderFlags" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderGuild" parentKey="Guild" inherits="GameFontNormal" justifyH="LEFT" text="[Characters guild]">
									<Size x="110" y="10" />
									<Anchors>
										<Anchor point="RIGHT" x="-15" y="0" relativePoint="LEFT" relativeTo="TRP3_RegisterListHeaderRealm" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderTime" parentKey="Time" inherits="GameFontNormal" justifyH="LEFT" text="[Time ?]">
									<Size x="110" y="10" />
									<Anchors>
										<Anchor point="RIGHT" x="-15" y="0" relativePoint="LEFT" relativeTo="TRP3_RegisterListHeaderGuild" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderRelations" parentKey="Info" inherits="GameFontNormal" justifyH="LEFT" text="[Relations ?]">
									<Size x="110" y="10" />
									<Anchors>
										<Anchor point="RIGHT" x="-15" y="0" relativePoint="LEFT" relativeTo="TRP3_RegisterListHeaderTime" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderName" parentKey="Name" inherits="GameFontNormal" justifyH="LEFT" text="[Characters name]">
									<Size x="0" y="10" />
									<Anchors>
										<Anchor point="LEFT" x="30" y="0" />
										<Anchor point="RIGHT" x="-15" y="0" relativePoint="LEFT" relativeTo="TRP3_RegisterListHeaderRelations" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
							</Layer>
						</Layers>
						<Frames>
							<Button name="TRP3_RegisterListHeaderNameTT" parentKey="NameTooltipButton" inherits="TRP3_InvisibleButton">
								<Size x="0" y="20" />
								<Anchors>
									<Anchor point="RIGHT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderName"/>
									<Anchor point="LEFT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderName"/>
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderName:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderName:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderRelationsTT" parentKey="InfoTooltipButton" inherits="TRP3_InvisibleButton">
								<Size x="0" y="20" />
								<Anchors>
									<Anchor point="RIGHT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderRelations"/>
									<Anchor point="LEFT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderRelations"/>
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderRelations:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderRelations:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderTimeTT" parentKey="TimeTooltipButton" inherits="TRP3_InvisibleButton">
								<Size x="0" y="20" />
								<Anchors>
									<Anchor point="RIGHT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderTime"/>
									<Anchor point="LEFT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderTime"/>
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderTime:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderTime:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderGuildTT" parentKey="TimeTooltipButton" inherits="TRP3_InvisibleButton">
								<Size x="0" y="20" />
								<Anchors>
									<Anchor point="RIGHT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderGuild"/>
									<Anchor point="LEFT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderGuild"/>
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderGuild:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderGuild:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderRealmTT" parentKey="TimeTooltipButton" inherits="TRP3_InvisibleButton">
								<Size x="0" y="20" />
								<Anchors>
									<Anchor point="RIGHT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderRealm"/>
									<Anchor point="LEFT" x="0" y="0" relativeTo="TRP3_RegisterListHeaderRealm"/>
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderRealm:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderRealm:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderActions" parentKey="Actions" inherits="TRP3_ActionButton">
								<Anchors>
									<Anchor point="LEFT" x="3" y="-1" />
								</Anchors>
							</Button>
						</Frames>
					</Frame>
					<Frame parentKey="ScrollBox" inherits="WowScrollBoxList"/>
					<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.Header" relativePoint="BOTTOM" y="-6"/>
							<Anchor point="BOTTOMRIGHT" x="-16" y="88"/>
						</Anchors>
					</EventFrame>

					<!-- Characters filters -->
					<Frame name="TRP3_RegisterListCharactFilter" parentKey="CharacterFilters" inherits="TRP3_GroupBoxTemplate">
						<Size x="0" y="65" />
						<KeyValues>
							<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="BOTTOMLEFT" x="8" y="8" />
							<Anchor point="BOTTOMRIGHT" x="-8" y="8" />
						</Anchors>
						<Frames>
							<EditBox name="TRP3_RegisterListFilterCharactName" parentKey="Name" inherits="TRP3_TitledEditBox">
								<Size x="125" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="25" y="0" />
								</Anchors>
							</EditBox>
							<EditBox name="TRP3_RegisterListFilterCharactGuild" parentKey="Guild" inherits="TRP3_TitledEditBox">
								<Size x="125" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="TRP3_RegisterListFilterCharactName" />
								</Anchors>
							</EditBox>
							<CheckButton name="TRP3_RegisterListFilterCharactRealm" inherits="TRP3_CheckBox" checked="true">
								<Anchors>
									<Anchor point="LEFT" x="15" y="12" relativePoint="RIGHT" relativeTo="TRP3_RegisterListFilterCharactGuild" />
								</Anchors>
							</CheckButton>
							<CheckButton name="TRP3_RegisterListFilterCharactNotes" inherits="TRP3_CheckBox" checked="true">
								<Anchors>
									<Anchor point="LEFT" x="15" y="-12" relativePoint="RIGHT" relativeTo="TRP3_RegisterListFilterCharactGuild" />
								</Anchors>
							</CheckButton>
							<Button name="TRP3_RegisterListCharactFilterButton" inherits="TRP3_SearchButton">
								<Anchors>
									<Anchor point="RIGHT" x="-35" y="0"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>

					<!-- Companions filters -->
					<Frame name="TRP3_RegisterListPetFilter" parentKey="CompanionFilters" inherits="TRP3_GroupBoxTemplate">
						<Size x="0" y="65" />
						<KeyValues>
							<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="BOTTOMLEFT" x="8" y="8" />
							<Anchor point="BOTTOMRIGHT" x="-8" y="8" />
						</Anchors>
						<Frames>
							<EditBox name="TRP3_RegisterListPetFilterName" parentKey="Name" inherits="TRP3_TitledEditBox">
								<Size x="125" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="25" y="0" />
								</Anchors>
							</EditBox>
							<EditBox name="TRP3_RegisterListPetFilterType" parentKey="Type" inherits="TRP3_TitledEditBox">
								<Size x="125" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="TRP3_RegisterListPetFilterName" />
								</Anchors>
							</EditBox>
							<EditBox name="TRP3_RegisterListPetFilterOwner" parentKey="Master" inherits="TRP3_TitledEditBox">
								<Size x="125" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="TRP3_RegisterListPetFilterType" />
								</Anchors>
							</EditBox>
							<Button name="TRP3_RegisterListPetFilterButton" parentKey="Button" inherits="TRP3_SearchButton">
								<Anchors>
									<Anchor point="RIGHT" x="-35" y="0"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

</Ui>
