<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<Frame name="TRP3_TooltipRequestSpinnerTemplate" hidden="true" virtual="true">
		<Size x="22" y="22"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Icon" file="Interface\AddOns\totalRP3\Resources\UI\ui-refresh" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="SpinAnimation" looping="REPEAT">
				<Rotation childKey="Icon" duration="1.5" degrees="-360" smoothing="OUT_IN"/>
				<Scripts>
					<OnLoad method="Play"/>
				</Scripts>
			</AnimationGroup>
		</Animations>
	</Frame>

	<!-- Character tooltip -->
	<GameTooltip name="TRP3_CharacterTooltip" frameStrata="TOOLTIP" parent="UIParent" inherits="TRP3_TooltipTemplate">
		<Frames>
			<Frame parentKey="ProgressSpinner" inherits="TRP3_TooltipRequestSpinnerTemplate"/>
		</Frames>
		<Scripts>
			<OnHide>
				self.isFading = nil;
			</OnHide>
		</Scripts>
	</GameTooltip>

	<!-- Companion tooltip -->
	<GameTooltip name="TRP3_CompanionTooltip" frameStrata="TOOLTIP" parent="UIParent" inherits="TRP3_TooltipTemplate">
		<Scripts>
			<OnHide>
				self.isFading = nil;
			</OnHide>
		</Scripts>
	</GameTooltip>

	<!-- Register characteristics panel -->
	<Frame name="TRP3_RegisterMain" hidden="true">
		<Frames>
			<Frame name="TRP3_RegisterCharact" inherits="TRP3_RegisterCharactTemplate" frameLevel="2">
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
			</Frame>
			<Frame name="TRP3_RegisterAbout" inherits="TRP3_RegisterAboutTemplate" frameLevel="2">
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
			</Frame>
			<Frame name="TRP3_RegisterMisc" inherits="TRP3_RegisterMiscTemplate" frameLevel="2">
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
			</Frame>
			<Frame name="TRP3_RegisterNotes" inherits="TRP3_RegisterNotesTemplate" frameLevel="2">
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
			</Frame>
			<Frame name="TRP3_RegisterDefault" inherits="TRP3_TooltipBackdropEdgeTemplate" frameLevel="2">
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GOLD" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" y="-30"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\SPELLBOOK\Spellbook-Page-1">
							<Anchors>
								<Anchor point="TOPRIGHT" x="-5" y="-2"/>
								<Anchor point="BOTTOMRIGHT" x="-5" y="-2"/>
								<Anchor point="LEFT" x="5"/>
							</Anchors>
							<TexCoords left="0.07" right="1" top="0" bottom="0.975"/>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Frame name="TRP3_RegisterDefaultView">
						<Anchors>
							<Anchor point="TOPLEFT" x="10" y="-20"/>
							<Anchor point="TOPRIGHT" x="-10" y="-20"/>
							<Anchor point="BOTTOM" y="10"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="TRP3_RegisterDefaultViewText" text="[text]" inherits="GameFontNormalLarge" justifyH="LEFT">
									<Anchors>
										<Anchor point="BOTTOM" relativePoint="CENTER" y="10"/>
										<Anchor point="LEFT" x="10"/>
										<Anchor point="RIGHT" x="-10"/>
									</Anchors>
									<Color r="1" g="1" b="1"/>
								</FontString>
							</Layer>
						</Layers>
						<Frames>
							<Button name="TRP3_RegisterDefaultViewCreateProfile" inherits="TRP3_CommonButton">
								<Size x="150" y="22"/>
								<Anchors>
									<Anchor point="TOP" relativePoint="CENTER" y="-10"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
			<Button name="TRP3_ProfileReportButton">
				<Size x="30" y="30"/>
				<Anchors>
					<Anchor point="TOPRIGHT" y="-2" x="-5"/>
				</Anchors>
				<Layers>
					<Layer>
						<Texture file="Interface\HelpFrame\HelpIcon-OpenTicket"/>
					</Layer>
				</Layers>
				<HighlightTexture file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight" alphaMode="ADD"/>
			</Button>
		</Frames>
	</Frame>

</Ui>
