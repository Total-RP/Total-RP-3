<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<!-- Register Notes panel -->
	<Frame name="TRP3_RegisterNotesTemplate" virtual="true" inherits="TRP3_TooltipBackdropEdgeTemplate">
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="Background" inherits="TRP3_PageBackgroundParchment">
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-4"/>
					<Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
				</Anchors>
			</Frame>
			<Frame name="TRP3_RegisterNotesView">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-20"/>
					<Anchor point="TOPRIGHT" x="-10" y="-20"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
				<Frames>
					<Frame name="TRP3_RegisterNotesViewContainer" inherits="TRP3_GroupBoxTemplate">
						<KeyValues>
							<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0"/>
							<Anchor point="BOTTOMRIGHT" x="-3" y="0"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<FontString parentKey="Notice" inherits="GameFontHighlight" justifyH="LEFT" justifyV="MIDDLE" wordwrap="false" nonspacewrap="false" collapsesLayout="true">
									<Size y="28"/>
									<Anchors>
										<Anchor point="TOP" x="0" y="-15"/>
										<Anchor point="LEFT" x="15" y="0"/>
										<Anchor point="RIGHT" x="-15" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Frames>
							<Frame parentKey="AccountNotes" inherits="TRP3_ProfileEditorTextAreaTemplate" collapsesLayout="true">
								<Anchors>
									<Anchor point="BOTTOM" x="0" y="10"/>
									<Anchor point="LEFT" x="10" y="0"/>
									<Anchor point="RIGHT" x="-10" y="0"/>
									<Anchor point="TOP" relativePoint="CENTER" x="0" y="-5"/>
								</Anchors>
							</Frame>
							<Frame parentKey="ProfileNotes" inherits="TRP3_ProfileEditorTextAreaTemplate">
								<Anchors>
									<Anchor point="TOP" relativeKey="$parent.Notice" relativePoint="BOTTOM"/>
									<Anchor point="LEFT" x="10" y="0"/>
									<Anchor point="RIGHT" x="-10" y="0"/>
									<Anchor point="BOTTOM" relativeKey="$parent.AccountNotes" relativePoint="TOP" x="0" y="5"/>
								</Anchors>
							</Frame>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>
</Ui>
