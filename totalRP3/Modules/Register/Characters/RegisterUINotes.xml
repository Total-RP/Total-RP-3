<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

	<!-- Register Notes panel -->
	<Frame name="TRP3_RegisterNotesTemplate" virtual="true">
		<Frames>
			<Frame parentKey="Background" inherits="TRP3_RegionResizeTemplate" clipChildren="true" useParentLevel="true">
				<KeyValues>
					<KeyValue key="resizeMode" value="TRP3_RegionResizeMode.Fill" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="interface/addons/totalrp3/resources/ui/ui-frame-parchment-background-right">
							<KeyValues>
								<KeyValue key="sourceWidth" value="808" type="number"/>
								<KeyValue key="sourceHeight" value="807" type="number"/>
								<KeyValue key="extraWidth" value="10" type="number"/>
								<KeyValue key="extraHeight" value="10" type="number"/>
							</KeyValues>
							<Anchors>
								<Anchor point="TOPRIGHT" x="10" y="10"/>
							</Anchors>
							<TexCoords left="0" right="0.7890625000" top="0" bottom="0.7880859375"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="TRP3_RegisterNotesView">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-20"/>
					<Anchor point="TOPRIGHT" x="-10" y="-20"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
				<Frames>
					<Frame name="TRP3_RegisterNotesViewContainer" inherits="TRP3_GroupBoxTemplate">
						<KeyValues>
							<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GOLD" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0"/>
							<Anchor point="BOTTOMRIGHT" x="-3" y="0"/>
						</Anchors>
						<Frames>
							<Frame name="TRP3_RegisterNotesViewPoint">
								<Size x="10" y="10"/>
								<Anchors>
									<Anchor point="CENTER" x="0" y="0"/>
								</Anchors>
							</Frame>
							<Frame name="TRP3_RegisterNotesViewProfile" inherits="TRP3_InsetScrollingEditBoxTemplate">
								<Anchors>
									<Anchor point="TOP" x="0" y="-25"/>
									<Anchor point="LEFT" x="10" y="0"/>
									<Anchor point="RIGHT" x="-10" y="0"/>
									<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="TRP3_RegisterNotesViewPoint" x="0" y="5"/>
								</Anchors>
								<Layers>
									<Layer level="OVERLAY">
										<FontString parentKey="Title" text="[title]" inherits="GameFontNormalSmall" justifyH="LEFT">
											<Anchors>
												<Anchor point="TOPLEFT" x="15" y="10"/>
												<Anchor point="TOPRIGHT" x="-15" y="10"/>
											</Anchors>
											<Color r="0.95" g="0.75" b="0.1"/>
										</FontString>
									</Layer>
								</Layers>
								<Frames>
									<Button parentKey="HelpButton" inherits="TRP3_HelpButton">
										<Size x="14" y="14"/>
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="13"/>
										</Anchors>
									</Button>
								</Frames>
							</Frame>
							<Frame name="TRP3_RegisterNotesViewAccount" inherits="TRP3_InsetScrollingEditBoxTemplate">
								<Size x="235" y="0"/>
								<Anchors>
									<Anchor point="BOTTOM" x="0" y="10"/>
									<Anchor point="LEFT" x="10" y="0"/>
									<Anchor point="RIGHT" x="-10" y="0"/>
									<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_RegisterNotesViewPoint" x="0" y="-5"/>
								</Anchors>
								<Layers>
									<Layer level="OVERLAY">
										<FontString parentKey="Title" text="[title]" inherits="GameFontNormalSmall" justifyH="LEFT">
											<Anchors>
												<Anchor point="TOPLEFT" x="15" y="10"/>
												<Anchor point="TOPRIGHT" x="-15" y="10"/>
											</Anchors>
											<Color r="0.95" g="0.75" b="0.1"/>
										</FontString>
									</Layer>
								</Layers>
								<Frames>
									<Button parentKey="HelpButton" inherits="TRP3_HelpButton">
										<Size x="14" y="14"/>
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="13"/>
										</Anchors>
									</Button>
								</Frames>
							</Frame>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>
</Ui>
