<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
	<Include file="TabFrame.lua"/>

	<Frame name="TRP3_DashboardTabFrame" mixin="TRP3_DashboardTabFrameMixin" virtual="true" inherits="TRP3_TooltipBackdropTemplate">
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GOLD" type="global"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="TabBar" frameLevel="1">
				<Size x="400" y="30"/>
				<Anchors>
					<!-- FIXME: This should be part of the frame, not outside of it. -->
					<Anchor point="TOPLEFT" x="17" y="30"/>
				</Anchors>
			</Frame>
			<ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-11"/>
					<Anchor point="BOTTOMRIGHT" x="-20" y="9"/>
				</Anchors>
				<ScrollChild>
					<Frame>
						<Size x="10" y="10"/>
						<Frames>
							<SimpleHTML parentKey="HTML" inherits="TRP3_DashboardHTMLContent">
								<Anchors>
									<Anchor point="TOPLEFT" x="5" y="-5"/>
								</Anchors>
							</SimpleHTML>
						</Frames>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
