<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\..\UI.xsd">

	<Button name="TRP3_GlanceBarSlotTemplate" virtual="true">
		<Size x="20" y="20" />
		<Layers>
			<Layer level="OVERLAY">
				<Texture file="Interface\MINIMAP\MiniMap-TrackingBorder.blp">
					<Size x="40" y="40" />
					<Anchors>
						<Anchor point="CENTER" x="8" y="-8" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<NormalTexture name="$parentImage" file="Interface\TargetingFrame\UI-TargetingFrame-Seal.blp" />
		<HighlightTexture file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight" alphaMode="ADD" />
		<Scripts>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>

	<Frame name="TRP3_GlanceBarTemplate" hidden="true" frameStrata="MEDIUM" toplevel="true" enableMouse="true" movable="true" virtual="true">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="false">
			<EdgeSize>
				<AbsValue val="24" />
			</EdgeSize>
			<TileSize>
				<AbsValue val="300" />
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
		</Backdrop>
		<Size x="140" y="32" />
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" x="0" y="0" />
		</Anchors>
		<Frames>
			<Button name="$parentSlot3" inherits="TRP3_GlanceBarSlotTemplate">
				<Anchors>
					<Anchor point="CENTER" x="2" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentSlot2" inherits="TRP3_GlanceBarSlotTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentSlot3" x="-5" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentSlot1" inherits="TRP3_GlanceBarSlotTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentSlot2" x="-5" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentSlot4" inherits="TRP3_GlanceBarSlotTemplate">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentSlot3" x="5" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentSlot5" inherits="TRP3_GlanceBarSlotTemplate">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentSlot4" x="5" y="0" />
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				self.isDraging = true;
			</OnDragStart>
			<OnDragStop>
				self.isDraging = nil;
			</OnDragStop>
		</Scripts>
	</Frame>

</Ui>